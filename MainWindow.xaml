<Window x:Class="_304555Hangman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_304555Hangman"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="btnWord" Click="BtnWord_Click" Content="Click for letter" Height="65" FontSize="30" BorderBrush="Black" BorderThickness="1" Background="MediumAquamarine"/>
        <TextBox x:Name="txtInput" BorderBrush="Black" BorderThickness="1" MaxLength="1" Height="40" FontSize="30"/>
        <TextBlock x:Name="txbWord" Text="_ _ _ _ _ _ _ _" Height="40" FontSize="30"/>
        <Label x:Name="lblLetters" Content=""  FontSize="30" BorderBrush="Black" BorderThickness="1" Height="40" />
        <Label x:Name="lblLivesRemaining" Content="Lives Remaining" BorderBrush="Black" BorderThickness="1" Height="100" FontSize="40"/>
    </StackPanel>
</Window>
